# =============================================================================
# WHATSAPP MONITOR - ENVIRONMENT CONFIGURATION
# Copy this file to .env and configure according to your setup
# =============================================================================

# Application Settings
APP_NAME="WhatsApp Monitor"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=Asia/Jakarta

# ⚠️ SECURITY: Generate a random 32-character key for production!
# You can use: openssl rand -base64 32
APP_KEY=your-super-secret-32-character-key

# Database Configuration (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=whatsapp_monitor
DB_USERNAME=root
DB_PASSWORD=

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=3600
SESSION_SECURE_COOKIE=false

# Node.js Backend Integration
NODEJS_URL=http://localhost:3000
NODEJS_TIMEOUT=30
WEBHOOK_SECRET=your-webhook-secret-key-here

# API Settings
API_RATE_LIMIT=1000
API_TOKEN_EXPIRE=8760

# User & Device Limits
MAX_DEVICES_PER_USER=10
MAX_UPLOAD_SIZE=10M

# Logging
LOG_LEVEL=info

# Mail Configuration (for notifications)
MAIL_DRIVER=smtp
MAIL_HOST=localhost
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@whatsapp-monitor.com
MAIL_FROM_NAME="WhatsApp Monitor"

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=daily

# Optional: Redis/Cache (if needed)
CACHE_DRIVER=file
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379